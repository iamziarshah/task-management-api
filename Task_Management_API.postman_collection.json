			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"const acceptHeader = pm.environment.get('accept_header') || 'application/json';",
					"",
					"const existingHeader = pm.request.headers.find(h => h.key.toLowerCase() === 'accept');",
					"if (existingHeader) {",
					"    existingHeader.value = acceptHeader;",
					"} else {",
					"    pm.request.headers.add({ key: 'Accept', value: acceptHeader });",
					"}",
					"",
					"const token = pm.environment.get(\"auth_token\");",
					"if (token) {",
					"    pm.request.headers.add({ key: \"Authorization\", value: `Bearer ${token}` });",
					"}",
					""
				]
			}
